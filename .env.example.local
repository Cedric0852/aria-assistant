# AI Citizen Support Assistant - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LiveKit Configuration
# =============================================================================

# LiveKit API credentials
# For development, these match the keys in livekit/livekit.yaml
LIVEKIT_API_KEY=
LIVEKIT_API_SECRET=
# LiveKit server URL
# Use ws:// for local development, wss:// for production
LIVEKIT_URL=ws://localhost:7880

# Public LiveKit URL (accessible from browser)
NEXT_PUBLIC_LIVEKIT_URL=ws://localhost:7880
API_URL_FOR_STREAMLIT=http://api:8000

# =============================================================================
# AI Provider API Keys
# =============================================================================

# Groq API Key - Primary STT/TTS, LLM Fallback
# Get yours at: https://console.groq.com/
GROQ_API_KEY=

# OpenAI API Key - Primary LLM, Fallback STT/TTS, Embeddings
# Get yours at: https://platform.openai.com/
OPENAI_API_KEY=sk-
# Anthropic API key (optional, for Claude models)
ANTHROPIC_API_KEY=sk-
# Deepgram API key (optional, for speech-to-text)
DEEPGRAM_API_KEY=your-deepgram-api-key-here

# ElevenLabs API key (optional, for text-to-speech)
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# =============================================================================
# Redis Configuration
# =============================================================================

# Redis connection URL
REDIS_URL=redis://redis:6379

# Redis password (optional, leave empty if not using authentication)
REDIS_PASSWORD=

# =============================================================================
# Database Configuration (optional)
# =============================================================================

# PostgreSQL connection URL
# DATABASE_URL=postgresql://user:password@localhost:5432/aria_agent

# =============================================================================
# Application Configuration
# =============================================================================

# Environment (development, staging, production)
NODE_ENV=development
PYTHON_ENV=development

# API server configuration
API_HOST=0.0.0.0
API_PORT=8000

# Frontend configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
# BACKEND_URL is used by Next.js server-side API routes (inside Docker: http://api:8000)
BACKEND_URL=http://localhost:8000
LIVEKIT_PUBLIC_URL=ws://localhost:7880

# =============================================================================
# Security Configuration
# =============================================================================

# JWT secret for token signing (generate a secure random string)
JWT_SECRET=your-secure-jwt-secret-here

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable JSON logging format for production
LOG_JSON=false

# =============================================================================
# Session Configuration
# =============================================================================

# Session timeout in seconds (default: 30 minutes)
SESSION_TIMEOUT=1800

# Maximum sessions per user
MAX_SESSIONS_PER_USER=5

# =============================================================================
# Rate Limiting
# =============================================================================

# API rate limit (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# WebSocket connection limit per IP
WS_CONNECTION_LIMIT=10

# =============================================================================
# Feature Flags
# =============================================================================

# Enable voice input
ENABLE_VOICE_INPUT=true

# Enable text-to-speech
ENABLE_TTS=true

# Enable multilingual support
ENABLE_MULTILINGUAL=true

# =============================================================================
# Monitoring (optional)
# =============================================================================

# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# Prometheus metrics endpoint
# METRICS_ENABLED=true
# METRICS_PORT=9090
